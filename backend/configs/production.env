# Application settings
APP_NAME="OpenFirma"
DEBUG=false
API_PREFIX=/api/v1
LOG_LEVEL=info

# Database settings
POSTGRES_SERVER=db
POSTGRES_USER=${POSTGRES_USER:-postgres}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-postgres}
POSTGRES_DB=${POSTGRES_DB:-openfirma}
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD:-postgres}@db:5432/${POSTGRES_DB:-openfirma}

# Security settings
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30